{% extends 'base.njk' %}

    {% block main %}
      <main>
        <h2>{{ title }}</h2>
        {{ content | safe }}
        {% set section = page.url.split("/").length %}
        {% for post in collections.all %}
          {% if post.url.split("/")[1] === "decouverte" %}
            {% if page.url.split("/")[section-2] === post.url.split("/")[section-2] %}
              {% if post.url.split("/")[section-1] and not post.url.split("/")[section] %}
                <li><a href="{{post.url}}">{{post.data.title}}</a> {{post.url}}</li>
              {% endif %}
            {% endif %}
          {% endif %}
        {% endfor %}
      </main>
    {% endblock %}
