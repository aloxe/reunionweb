{% macro getTitle(url) %}
    {% for post in collections.all %}
        {% if url === post.url %} {# decouverte #}
            {{post.data.short or post.data.title}}
        {% endif %}
    {% endfor %}
    {% for lien in categories %} {# liens #}
        {% if url === lien.slug %}
            {{ lien.title }}
        {% endif %}
    {% endfor %}
{% endmacro %}

{% macro getLinkTitle(url) %}
    {% for post in collections.all %}
        {% if url === post.url %}
            <a href="{{url}}">{{post.data.short or post.data.title}}</a>
        {% endif %}
        {% if post.data.date and url === post.data.date.split("-").join('') %}
            <a href="/{{ post.data.title | slugify }}/">{{ post.data.title }}</a>
        {% endif %}
    {% endfor %}
    {% for lien in categories %}
        {% if url === lien.slug %}
            <a href="{{url}}">{{ lien.title }}</a>
        {% endif %}
    {% endfor %}
{% endmacro %}

{% macro getLinkArticle(url) %}
    {% for post in collections.all %}
        {% if post.data.date and url === post.data.date.split("-").join('') %}
            <a href="/{{ post.data.title | slugify }}/">{{ post.data.title }}</a>
        {% endif %}
    {% endfor %}
{% endmacro %}
